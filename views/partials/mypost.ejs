
<div>
  <h4><P >Total de posts: <%- TotaldeLinhas %></P></h4>
  <% dados.forEach(function(row) { %>
  <% if (row.id % 2 === 0) { %>
    <div id="posts">
      <div class="titlePost">
        <p><%= row.titulo %></p>
        <div><a href="/editpost/<%= row.id %>" >EDIT</a></div>
      </div>
      <div class="textPost">
        <p><%- row.conteudo %></p>
        <div class="date">
          <% console.log(`myposts: ${row.id}`) %>
          <p>Autor: <%= row.nome %><br><%= row.data.toLocaleString('pt-BR', {dateStyle: 'short', timeStyle: 'short'}) %></p>
          <a class="btn btn-danger" href="/myposts/<%= row.id %>">DELETE</a> 
        </div>
      </div>
    </div>
    <br>
  <% } else  { %>
    <div id="posts" class="right">
      <div class="titlePost">
        <p><%= row.titulo %></p>
        <div><a href="/updatepost/<%= row.id %>" >EDIT</a></div>
      </div>
      <div class="textPost">
        <p><%= row.conteudo %></p>
        <div class="date">
          <% console.log(`myposts: ${row.id}`) %>
          <p>Autor: <%= row.nome %><br><%= row.data.toLocaleString('pt-BR', {dateStyle: 'short', timeStyle: 'short'}) %></p>
          <a class="btn btn-danger" href="/myposts/<%= row.id %>">DELETE</a> 
        </div>
      </div>
    </div><br>
  </div><br>
  <% } %>
<% }); %>

</div>

<style>
  /*--------------------------------------------------------------
# Hero Section
--------------------------------------------------------------*/
*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

  #posts{
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    width: 40%;
    background-color: white;
    border-radius: 20px;
    transition: 0.5s;
  }

  #posts:hover{
    width: 50%;
    height: 10%;
    font-size: 75%;
  }
  .textPost{
    word-wrap: break-word;
  }

  .titlePost{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #000;
    margin-bottom: 10px;
  }


  .titlePost p{
    font-weight: bold;
    font-size: 18px;
  }
  
  .right{
    margin-left: auto;
    margin-right: 0; 
  }

  .date {
    font-size: 12px;
    font-family: 'Courier New', Courier, monospace;
    color: #979797;
  }

</style>
